<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SimpleChoose" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/night_main</item>
        <item name="colorPrimaryVariant">@color/night_main</item>
        <item name="colorOnPrimary">@color/night_main</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/night_secondary</item>
        <item name="colorSecondaryVariant">@color/night_secondary</item>
        <item name="colorOnSecondary">@color/night_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorMain">@color/night_main</item>
        <item name="colorPageTitle">@color/night_page_title</item>
        <item name="colorItemTitle">@color/night_item_title</item>
        <item name="colorItemDesc">@color/night_item_desc</item>
        <item name="colorWindow">@color/night_window</item>
        <item name="colorSplitLine">@color/night_split_line</item>
        <item name="colorWarning">@color/night_warning</item>
    </style>

    <style name="MultiStatView" parent="Theme.SimpleChoose">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="msv_animateViewChanges">false</item>
        <item name="msv_emptyView">@layout/layout_multi_view_empty</item>
        <item name="msv_errorView">@layout/layout_multi_view_error</item>
        <item name="msv_loadingView">@layout/layout_multi_view_load</item>
        <item name="msv_viewState">content</item>
        <item name="android:background">@color/night_window</item>
    </style>

</resources>