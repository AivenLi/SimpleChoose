<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@drawable/radius_10_gray_bg"
    android:layout_marginTop="@dimen/page_margin"
    >
    <com.example.simplechoose.view.RoundImageView
        android:id="@+id/img_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:radius="10dp"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试"
        android:textColor="?colorPageTitle"
        android:textSize="@dimen/text_item_title"
        android:background="@drawable/radius_8_bottom_alpha_aa_black_bg"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        />
    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_open_now"
        android:textSize="@dimen/text_item_desc"
        android:textColor="?colorPageTitle"
        android:background="@drawable/radius_8_top_right_bottom_left_red_bg"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="top|end"
        android:gravity="center"
        android:visibility="gone"
        />
</FrameLayout>