<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clt_title_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:background="?colorMain"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/small_icon"
            android:layout_height="@dimen/small_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_back"
            android:layout_marginStart="@dimen/page_margin"
            app:tint="?colorPageTitle"
            android:padding="3dp"
            />
        <TextView
            android:id="@+id/tv_page_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/test_paper_result"
            android:textSize="@dimen/text_page_title"
            android:textColor="?colorPageTitle"
            android:gravity="center"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:srlEnablePureScrollMode="true"
        app:srlDragRate="0.75"
        app:layout_constraintTop_toBottomOf="@id/clt_title_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="?colorMain"
        >
        <FrameLayout
            android:id="@+id/flt_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="?colorMain"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?colorWindow"
                android:layout_marginTop="200dp"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="300dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/radius_20_white_bg"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:elevation="10dp"
                android:padding="@dimen/page_margin"
                >
                <TextView
                    android:id="@+id/tv_test_paper_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="试卷名称："
                    android:textSize="@dimen/text_page_title"
                    android:textColor="?colorItemTitle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="@dimen/page_margin"
                    />
                <TextView
                    android:id="@+id/tv_test_paper_value"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="测试"
                    android:textSize="@dimen/text_page_title"
                    android:textColor="?colorItemDesc"
                    app:layout_constraintStart_toEndOf="@id/tv_test_paper_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tv_test_paper_title"
                    android:maxLines="2"
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/tv_right_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/right_title"
                    android:textSize="@dimen/text_page_title"
                    android:textColor="?colorItemTitle"
                    app:layout_constraintTop_toBottomOf="@id/tv_test_paper_value"
                    app:layout_constraintEnd_toEndOf="@id/tv_test_paper_title"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_right_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10道"
                    android:textSize="@dimen/text_page_title"
                    android:textColor="?colorItemDesc"
                    app:layout_constraintStart_toEndOf="@id/tv_right_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_right_title"
                    />
                <TextView
                    android:id="@+id/tv_left_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/left_title"
                    android:textSize="@dimen/text_page_title"
                    android:textColor="?colorItemTitle"
                    app:layout_constraintTop_toBottomOf="@id/tv_right_title"
                    app:layout_constraintEnd_toEndOf="@id/tv_right_title"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_left_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0道"
                    android:textSize="@dimen/text_page_title"
                    android:textColor="?colorItemDesc"
                    app:layout_constraintStart_toEndOf="@id/tv_left_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_left_title"
                    />
                <TextView
                    android:id="@+id/tv_uncheck_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/uncheck_title"
                    android:textSize="@dimen/text_page_title"
                    android:textColor="?colorItemTitle"
                    app:layout_constraintTop_toBottomOf="@id/tv_left_title"
                    app:layout_constraintEnd_toEndOf="@id/tv_left_title"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_uncheck_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0道"
                    android:textSize="@dimen/text_page_title"
                    android:textColor="?colorItemDesc"
                    app:layout_constraintBottom_toBottomOf="@id/tv_uncheck_title"
                    app:layout_constraintStart_toEndOf="@id/tv_uncheck_title"
                    />
                <TextView
                    android:id="@+id/tv_use_time_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/use_time_title"
                    android:textSize="@dimen/text_page_title"
                    android:textColor="?colorItemTitle"
                    app:layout_constraintTop_toBottomOf="@id/tv_uncheck_title"
                    app:layout_constraintEnd_toEndOf="@id/tv_uncheck_title"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/tv_use_time_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20分钟"
                    android:textSize="@dimen/text_page_title"
                    android:textColor="?colorItemDesc"
                    app:layout_constraintBottom_toBottomOf="@id/tv_use_time_title"
                    app:layout_constraintStart_toEndOf="@id/tv_use_time_title"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="?colorSplitLine"
                    app:layout_constraintTop_toBottomOf="@id/tv_use_time_title"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    />
                <LinearLayout
                    android:id="@+id/lyt_check_prompt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/tv_use_time_title"
                    app:layout_constraintStart_toStartOf="@id/tv_test_paper_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="@dimen/page_margin"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/right_title"
                        android:textSize="@dimen/text_item_title"
                        android:textColor="?colorDeepTitle"
                        android:layout_marginStart="10dp"
                        />
                    <View
                        android:id="@+id/view_checked_color"
                        android:layout_width="@dimen/small_icon"
                        android:layout_height="@dimen/small_icon"
                        android:background="?colorChecked"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/left_title"
                        android:textSize="@dimen/text_item_title"
                        android:textColor="?colorDeepTitle"
                        android:layout_marginStart="10dp"
                        />
                    <View
                        android:id="@+id/view_left_check_color"
                        android:layout_width="@dimen/small_icon"
                        android:layout_height="@dimen/small_icon"
                        android:background="?colorUnCheck"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/uncheck_title"
                        android:textSize="@dimen/text_item_title"
                        android:textColor="?colorDeepTitle"
                        android:layout_marginStart="10dp"
                        />
                    <View
                        android:id="@+id/view_un_check_color"
                        android:layout_width="@dimen/small_icon"
                        android:layout_height="@dimen/small_icon"
                        android:background="?colorItemDesc"
                        />
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:overScrollMode="never"
                    app:layout_constraintTop_toBottomOf="@id/lyt_check_prompt"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/page_margin"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <Button
                android:id="@+id/btn_show_parse"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="@string/show_parse"
                android:textSize="@dimen/page_margin"
                android:textColor="@color/btn_main_txt"
                android:background="@drawable/btn_main_bg"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="@dimen/page_margin"
                android:layout_gravity="bottom"
                />
            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80分"
                android:textSize="50dp"
                android:textColor="?colorPageTitle"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                />
        </FrameLayout>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>
</androidx.constraintlayout.widget.ConstraintLayout>