<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="@dimen/page_margin"
    android:paddingEnd="@dimen/page_margin"
    >
    <View
        android:id="@+id/view_top_space"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/page_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="考试时间"
        android:textSize="@dimen/text_item_title"
        android:textColor="?colorItemTitle"
        app:layout_constraintTop_toBottomOf="@id/view_top_space"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        />
    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20分钟"
        android:textSize="@dimen/text_item_desc"
        android:textColor="?colorItemDesc"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        android:layout_marginEnd="@dimen/page_margin"
        android:layout_marginTop="4dp"
        />
    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_compat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        app:layout_constraintBottom_toBottomOf="@id/tv_desc"
        android:theme="@style/SwitchCompat"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/page_margin"
        android:background="?colorSplitLine"
        />
</androidx.constraintlayout.widget.ConstraintLayout>